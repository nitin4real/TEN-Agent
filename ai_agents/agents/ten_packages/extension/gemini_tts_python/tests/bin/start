#!/bin/bash
set -e

cd "$(dirname "${BASH_SOURCE[0]}")/../.."

# Set PYTHONPATH to include TEN framework packages
export PYTHONPATH=.ten/app:.ten/app/ten_packages/system/ten_runtime_python/lib:\
.ten/app/ten_packages/system/ten_runtime_python/interface:\
.ten/app/ten_packages/system/ten_ai_base/interface:$PYTHONPATH

pytest -s tests/ "$@"
