import("//build/feature/ten_package.gni")
import("//build/ten_runtime/feature/publish.gni")
import("//build/ten_runtime/glob.gni")
import("//build/ten_runtime/options.gni")

ten_package("transcriber_demo") {
  package_kind = "app"

  all_files = exec_script("//.gnfiles/build/scripts/glob_file.py",
                          [
                            "--dir",
                            rebase_path("**/*"),
                            "--dir-base",
                            rebase_path("."),
                            "--recursive",
                            "--only-output-file",
                          ],
                          "json")
  resources = []

  foreach(file, all_files) {
    file_rel_path = file.relative_path
    resources += [ "${file_rel_path}=>${file_rel_path}" ]
  }
}
